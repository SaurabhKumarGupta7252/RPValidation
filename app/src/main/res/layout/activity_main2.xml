<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity2">

    <com.android.app.progressbar.ProgressBar
        android:id="@+id/progressBar_multi_color"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:padding="1dp"
        app:sw_progressBackground="#ccc"
        app:sw_radius="80dp" />

    <com.android.app.rangeBar.RangeBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrb_connectingLineColor="#C1E2DE"
        app:mrb_rangeBar="false"
        app:mrb_rangeBar_rounded="true"
        app:mrb_rightThumbColor="@color/white"
        app:mrb_temporaryPins="true"
        app:mrb_thumbBoundaryColor="@color/black"
        app:mrb_thumbBoundarySize="1dp"
        app:mrb_thumbSize="16dp"
        app:mrb_minThumbDistance="-1"
        app:mrb_tickDefaultColor="#C1E2DE"
        app:mrb_tickEnd="4"
        app:mrb_tickHeight="8dp"
        app:mrb_pinColor="#00000000"
        app:mrb_pinTextColor="#00000000"
        app:mrb_tickInterval="1"
        app:mrb_thumbCenterPointSize="7dp"
        app:mrb_thumbCenterPointColor="@color/black"
        app:mrb_tickLabelSelectedColor="#0f0f0f"
        app:mrb_tickLabelSize="4sp"
        app:mrb_tickStart="1" />

